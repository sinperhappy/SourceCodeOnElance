@{
    ViewBag.Title = Internationalization.Resources.Register;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Internationalization.Resources.CreateAccount</h2>
<p>@Internationalization.Resources.CreateAccountInfo @Html.ActionLink(Internationalization.Resources.SignIn, "LogIn", "Account")</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) { 
    @Html.ValidationSummary(true)

    <div class="editor-label">
        @Html.RadioButton("Type", "0", true)@Internationalization.Resources.WantHire
        <p>@Internationalization.Resources.WantHireInfo</p>
    </div>
    
    <div class="editor-label">
        @Html.RadioButton("Type", "1", false)@Internationalization.Resources.WantWork
        <p>@Internationalization.Resources.WantWorkInfo</p>
    </div>
    
    <p>
        <input type="submit" value="@Internationalization.Resources.Continue" />
    </p>
}