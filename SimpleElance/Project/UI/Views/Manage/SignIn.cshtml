@model UI.ViewModels.LogInModel
@{
    Layout = null;
    }
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/login.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body class="login_body">
    @using (Html.BeginForm()) {
        @Html.ValidationSummary(true)
    <div class="login_form_main">
        <div class="login_form_line1">
            <span class="login_form_user">@Html.LabelFor(model => model.UserName)</span>
            <span class="login_form_userinput">@Html.TextBoxFor(model => model.UserName)</span>
        </div>
        <div class="login_form_line2">
            <span class="login_form_password">@Html.LabelFor(model => model.PassWord)</span>
            <span class="login_form_userinput">@Html.TextBoxFor(model => model.PassWord)</span>
        </div>
        <div class="login_form_line3">
            
        </div>
        <div class="login_form_line3">
            <input type="submit" class="l_f_i_login" value="@Internationalization.Resources.SignIn" />
        </div>
    </div>
    }
</body>
</html>
<script type="text/javascript">
    $(function () {
        $("#UserName").focus();
    });
</script>